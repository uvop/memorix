{
  "name": "@memorix/app-backend",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "license": "ISC",
  "author": "",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json && copyfiles -u 1 src/**/*.graphql dist/src",
    "codegen": "npm -s run codegen:prisma && npm -s run codegen:graphql",
    "codegen:graphql": "ts-node --transpile-only scripts/codegen-graphql && npm run format",
    "codegen:prisma": "prisma generate",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:err": "npm run lint -- --quiet",
    "lint:fix": "npm run lint -- --fix",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "start": "ts-node-dev --no-notify --respawn -r tsconfig-paths/register src/start.ts",
    "start:prod": "NODE_PATH=dist/ node ./dist/src/start.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@graphql-tools/schema": "^7.1.5",
    "@graphql-tools/stitch": "^7.5.3",
    "@prisma/client": "^3.5.0",
    "apollo-link-http": "^1.5.17",
    "apollo-server": "^2.25.0",
    "graphql": "^15.5.0",
    "graphql-redis-subscriptions": "^2.4.0",
    "graphql-subscriptions": "^1.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/core": "^1.17.10",
    "@graphql-codegen/typescript": "^1.22.1",
    "@graphql-codegen/typescript-resolvers": "^1.19.2",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-airbnb-typescript": "^10.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "glob": "^7.1.7",
    "prettier": "^2.1.2",
    "prisma": "^3.5.0",
    "ts-jest": "^27.0.2",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.6.3"
  }
}
