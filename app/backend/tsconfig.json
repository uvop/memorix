{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@memorix/client-js/*": ["../../clients/js/src/*"],
      "@memorix/cli/*": ["../../cli/src/*"]
    },
    "outDir": "dist",
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "target": "ES2018",
    "module": "commonjs",
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true
  }
}
