{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run app backend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "tsconfig-paths/register",
        "-r",
        "ts-node/register/transpile-only"
      ],
      "args": ["src/start.ts"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    }
  ]
}
