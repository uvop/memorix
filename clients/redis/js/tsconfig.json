{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "rootDir": ".",
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "experimentalDecorators": true,
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  }
}
